  "unitId": "haruki-z-kai-202512",
  "title": "遥生 Z会 2025年12月",
  "items": [
    { "id": "haruki-z-kai-202512-0001", "ja": "〜に来た", "en": "came to" },
    { "id": "haruki-z-kai-202512-0002", "ja": "〜に出会った", "en": "met" },
    { "id": "haruki-z-kai-202512-0003", "ja": "〜に行った", "en": "went to" },

    { "id": "haruki-z-kai-202512-0004", "ja": "ぼくは3年前に日本の来ました。", "en": "I came to Japan three years ago." },
    { "id": "haruki-z-kai-202512-0005", "ja": "わたしは4年前にドイツに行きました。", "en": "I went to Germany four years ago." },
    { "id": "haruki-z-kai-202512-0006", "ja": "わたしは千葉であなたたちに出会いました。", "en": "I met you in Chiba." },
    { "id": "haruki-z-kai-202512-0007", "ja": "ぼくは神戸でボブに出会いました。", "en": "I met Bob in Kobe." },

    { "id": "haruki-z-kai-202512-0008", "ja": "〜を楽しんだ", "en": "enjoyed" },
    { "id": "haruki-z-kai-202512-0009", "ja": "〜をした", "en": "played" },
    { "id": "haruki-z-kai-202512-0010", "ja": "〜を訪れた", "en": "visited" },

    { "id": "haruki-z-kai-202512-0011", "ja": "僕は友達と水泳を楽しみました。", "en": "I enjoyed swimming with my friends." },
    { "id": "haruki-z-kai-202512-0012", "ja": "ぼくたちはサッカーをしました。", "en": "We played soccer." },
    { "id": "haruki-z-kai-202512-0013", "ja": "ぼくたちはよくサッカーをしました。", "en": "We often played soccer." },
    { "id": "haruki-z-kai-202512-0014", "ja": "わたしたちは2年前に中国を訪れました。", "en": "We visited China two years ago." },

    { "id": "haruki-z-kai-202512-0015", "ja": "スポーツ大会、運動会", "en": "sports festival" },
    { "id": "haruki-z-kai-202512-0016", "ja": "修学旅行", "en": "school trip" },
    { "id": "haruki-z-kai-202512-0017", "ja": "冬に", "en": "in winter" },

    { "id": "haruki-z-kai-202512-0018", "ja": "僕の１番の思い出はスポーツ大会です。", "en": "My best memory is the sports festival." },
    { "id": "haruki-z-kai-202512-0019", "ja": "わたしの１番の思い出は修学旅行です。", "en": "My best memory is the chool trip." },
    { "id": "haruki-z-kai-202512-0020", "ja": "ぼくの１番の思い出は冬の家族旅行です。", "en": "My best memory is the family trip in winter." },

    { "id": "haruki-z-kai-202512-0021", "ja": "あなたたちと友達になれてうれしいです。", "en": "I’m glad to become friends with you." },

    { "id": "haruki-z-kai-202512-0022", "ja": "こわい", "en": "scared" },
    { "id": "haruki-z-kai-202512-0023", "ja": "気分が悪い", "en": "sick" },
    { "id": "haruki-z-kai-202512-0024", "ja": "いそがしい", "en": "busy" },

    { "id": "haruki-z-kai-202512-0025", "ja": "あなたはこわかったの？", "en": "Were you scared?" },
    { "id": "haruki-z-kai-202512-0026", "ja": "あなたは昨日、忙しかったですか？", "en": "Were you busy yesterday?" },
    { "id": "haruki-z-kai-202512-0027", "ja": "はい、そうでした。/いいえ、そうではありませんでした。", "en": "Yes, I was. / No, I wasn’t." },

    { "id": "haruki-z-kai-202512-0028", "ja": "わたしは機能、気分が悪かったです。", "en": "I was sick yesterday." },

    { "id": "haruki-z-kai-202512-0029", "ja": "楽しいこと", "en": "fun" },
    { "id": "haruki-z-kai-202512-0030", "ja": "わくわくする", "en": "exciting" },
    { "id": "haruki-z-kai-202512-0031", "ja": "興味深い、おもしろい", "en": "interesting" },

    { "id": "haruki-z-kai-202512-0032", "ja": "たのしかったね", "en": "It was fun." },
    { "id": "haruki-z-kai-202512-0033", "ja": "わくわくしました", "en": "It was exciting." },

    { "id": "haruki-z-kai-202512-0034", "ja": "悲しい", "en": "sad" },
    { "id": "haruki-z-kai-202512-0035", "ja": "緊張して、不安な", "en": "nervous" },
    { "id": "haruki-z-kai-202512-0036", "ja": "うれしい", "en": "happy" },

    { "id": "haruki-z-kai-202512-0037", "ja": "ぼくは昨日、悲しくなかったよ", "en": "I wasn’t sad yesterday." },
    { "id": "haruki-z-kai-202512-0038", "ja": "わたしは昨日、緊張していませんでした", "en": "I wasn’t nervous yesterday." },
    { "id": "haruki-z-kai-202512-0039", "ja": "ぼくは今、うれしいです。", "en": "I’m happy now." }
  ]
}
